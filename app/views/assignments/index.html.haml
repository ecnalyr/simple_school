%h1 Listing assignments

%table
  %thead
    %tr
      %th Name
      %th Classroom
      %th
      %th
      %th
      
  %tbody
    - @assignments.each do |assignment|
      %tr
        %td= assignment.name
        %td= assignment.classroom
        %td= link_to 'Show', assignment
        %td= link_to 'Edit', edit_assignment_path(assignment)
        %td= link_to 'Destroy', assignment, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

